@model GauMeo.ViewComponents.AvatarViewModel

@if (!string.IsNullOrEmpty(Model.AvatarUrl))
{
    <img src="@Model.AvatarUrl" 
         alt="@(Model.FullName ?? Model.UserName)" 
         class="avatar-image @Model.CssClass"
         style="border-radius: 50%; object-fit: cover;" />
}
else
{
    <div class="avatar-initial @Model.CssClass" 
         style="background-color: @Model.BackgroundColor; 
                color: white; 
                border-radius: 50%; 
                display: flex; 
                align-items: center; 
                justify-content: center; 
                font-weight: bold;
                font-size: inherit;
                width: 100%;
                height: 100%;
                min-width: 40px;
                min-height: 40px;">
        @Model.Initial
    </div>
}
