@model BreadcrumbViewModel

@if (Model?.Items != null && Model.Items.Any())
{
    <div class="breadcrumb @Model.CssClass">
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            var item = Model.Items[i];
            
            if (item.IsActive || string.IsNullOrEmpty(item.Url))
            {
                <span class="breadcrumb-link active">@item.Name</span>
            }
            else
            {
                <a href="@item.Url" class="breadcrumb-link">@item.Name</a>
            }
            
            @if (i < Model.Items.Count - 1)
            {
                <text> / </text>
            }
        }
    </div>
}
