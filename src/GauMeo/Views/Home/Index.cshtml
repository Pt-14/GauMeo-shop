      <section class="categories">
        <h2>Danh mục sản phẩm cho chó</h2>
        <div class="category-list">
          @if (ViewBag.DogCategories != null)
          {
              @foreach (var category in (IEnumerable<GauMeo.Models.Categories.Category>)ViewBag.DogCategories)
              {
                  <div class="category-card">
                      <a href="/Product/Category/@category.Slug">
                          @if (!string.IsNullOrEmpty(category.ImageUrl))
                          {
                              <img src="@category.ImageUrl" alt="@category.Name" />
                          }
                          else if (!string.IsNullOrEmpty(category.Icon))
                          {
                              <div class="category-icon">@category.Icon</div>
                          }
                          else
                          {
                              <img src="/images/categories/default-dog.png" alt="@category.Name" />
                          }
                          <span>@category.Name</span>
                      </a>
                  </div>
              }
          }
        </div>
        <h2>Danh mục sản phẩm cho mèo</h2>
        <div class="category-list">
          @if (ViewBag.CatCategories != null)
          {
              @foreach (var category in (IEnumerable<GauMeo.Models.Categories.Category>)ViewBag.CatCategories)
              {
                  <div class="category-card">
                      <a href="/Product/Category/@category.Slug">
                          @if (!string.IsNullOrEmpty(category.ImageUrl))
                          {
                              <img src="@category.ImageUrl" alt="@category.Name" />
                          }
                          else if (!string.IsNullOrEmpty(category.Icon))
                          {
                              <div class="category-icon">@category.Icon</div>
                          }
