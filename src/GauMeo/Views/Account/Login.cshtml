@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Đăng nhập";
}

@* Auth CSS is already loaded in _Layout.cshtml when user is authenticated or on Account pages *@

<div class="auth-container">
    <div class="container">
        <div class="form">
            <h2>Đăng nhập</h2>
            <form asp-action="Login" asp-controller="Account" method="post" style="height: 210px;">
                <input type="hidden" name="returnUrl" value="@Context.Request.Query["returnUrl"]" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="inputBox">
                    <input asp-for="Email" required="required">
                    <i class="fa-regular fa-envelope"></i>

                    <span asp-validation-for="Email" class="text-danger">Email</span>
                </div>
                <div class="inputBox">
                    <input asp-for="Password" required="required">
                    <i class="fa-solid fa-lock"></i>

                    <span asp-validation-for="Password" class="text-danger">Mật khẩu</span>
                </div>
                <div class="inputBox">
                    <input type="submit" value="Đăng nhập">
                </div>
                <p class="forgot-password"><a asp-action="ForgotPassword" asp-controller="Account">Quên mật khẩu?</a></p>
            </form>
            
            <!-- Phần đăng nhập bằng Google -->
            <div class="external-login-section">
                <div class="divider">
                    <span>Hoặc</span>
                </div>
                <form asp-action="ExternalLogin" asp-controller="Account" method="post">
                    <input type="hidden" name="provider" value="Google" />
                    <input type="hidden" name="returnUrl" value="@Context.Request.Query["returnUrl"]" />
                    <div class="inputBox google-login">
                        <button type="submit" class="google-btn">
                            <i class="fab fa-google"></i>
                            Đăng nhập với Google
                        </button>
                    </div>
                </form>
            </div>
            <p>Chưa có tài khoản? <a asp-action="Register" asp-controller="Account">Đăng ký</a></p>
        </div>
    </div>
</div>
